<!DOCTYPE html>
<html>
<head>
    <title>Profile</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Righteous&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('partials/_navbar.ejs') %>
    <h1>Welcome, <%= user.username %>!</h1>

    <h2>Your Cars</h2>
    <ul>
        <% carsOwned.forEach(car => { %>
            <li>
                <h3><%= car.name %></h3>
                <p>Make: <%= car.make %></p>
                <p>Color: <%= car.colour %></p>
                <p>Year: <%= car.year %></p>
                <p>Drivetrain: <%= car.drivetrain %></p>
                <p>Location: <%= car.location %></p>
            </li>
        <% }) %>
    </ul>

    <h2>Favorited Cars</h2>
    <ul>
        <% favoritedCars.forEach(car => { %>
            <li>
                <h3><%= car.name %></h3>
                <p>Make: <%= car.make %></p>
                <p>Color: <%= car.colour %></p>
                <p>Year: <%= car.year %></p>
                <p>Drivetrain: <%= car.drivetrain %></p>
                <p>Location: <%= car.location %></p>
            </li>
        <% }) %>
    </ul>
</body>
</html>
