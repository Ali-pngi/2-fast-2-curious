<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Righteous&display=swap" rel="stylesheet">
</head>
<body>
   
    <div class="container">
        <div class="sidebar">
            <a href="/cars">Home page</a>
            <a href="/cars/search">Search posts</a>
            <a href="/cars/new">New post</a>
            <a href="/auth/sign-out">Sign out</a>
        </div>
        <div class="main-content">
            <div class="title">
                <h1>Welcome, <%= user.username %>!</h1>
            </div>

            <h2>Your Cars</h2>
            <div class="car-grid">
                <% carsOwned.forEach(car => { %>
                <div class="car-card">
                    <% if (car.photo) { %>
                        <img src="<%= car.photo %>" alt="Photo of <%= car.name %>">
                    <% } %>
                    <h3><%= car.name %></h3>
                    <p>Make: <%= car.make %></p>
                    <p>Colour: <%= car.colour %></p>
                    <p>Year: <%= car.year %></p>
                    <p>Drivetrain: <%= car.drivetrain %></p>
                    <p>Location: <%= car.location %></p>
                    <div class="actions">
                        <a href="/cars/<%= car._id %>/edit" class="edit-btn">Edit</a>
                        <form action="/cars/<%= car._id %>?_method=DELETE" method="POST" class="delete-form">
                            <button type="submit" class="delete-btn">Delete</button>
                        </form>
                    </div>
                </div>
                <% }) %>
            </div>

            <h2>Favorited Cars</h2>
            <div class="car-grid">
                <% favoritedCars.forEach(car => { %>
                <div class="car-card">
                    <% if (car.photo) { %>
                        <img src="<%= car.photo %>" alt="Photo of <%= car.name %>">
                    <% } %>
                    <h3><%= car.name %></h3>
                    <p>Make: <%= car.make %></p>
                    <p>Colour: <%= car.colour %></p>
                    <p>Year: <%= car.year %></p>
                    <p>Drivetrain: <%= car.drivetrain %></p>
                    <p>Location: <%= car.location %></p>
                    <form action="/cars/<%= car._id %>/unfavorite" method="POST">
                        <button type="submit" class="unfavorite-btn">Remove from Favorites</button>
                    </form>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
    <script src="/scripts/profile.js"></script>
</body>
</html>
